{
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "compilerOptions": {
    "outDir": "./dist.browser",
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strict": true,
    "target": "es5",
    "lib": [
      "dom",
      "es5"
    ]
  }
}